<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/banner_height"
	    android:background="@color/blue_title_bar" >
	    
	    <Button
	        android:id="@+id/banner_back_btn"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:padding="6dp"
	        android:gravity="left|center_vertical"
	        android:background="@color/blue_title_bar"
	        android:textColor="@android:color/white"
	        android:textSize="20sp"
	        android:text="@string/btn_back"
	        android:fontFamily="sans-serif-light"
	        android:textStyle="normal" />
	    
	    <TextView
	        android:id="@+id/banner_title_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:textColor="@android:color/white"
	        android:textSize="24sp"
	        android:text="@string/app_name"
	        android:fontFamily="sans-serif-light"
	        android:textStyle="normal" />
	    
	    <Button
	        android:id="@+id/banner_alert_btn"
	        android:layout_width="70dp"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/red"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:text="@string/btn_alert"
	        android:fontFamily="sans-serif-light"
	        android:textStyle="normal" />

	    <Button
	        android:id="@+id/banner_instructions_btn"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/banner_alert_btn"
	        android:background="@drawable/orange"
	       	android:text=" ? "
	        android:textColor="@android:color/white"
	        android:textSize="24sp"
	        android:fontFamily="sans-serif-light"
	        android:textStyle="normal" />

		<Spinner
		    android:id="@+id/pager_spinner"
		    android:layout_width="40dp"
		    android:layout_height="match_parent"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/banner_instructions_btn"
		    android:background="@drawable/green"
		    android:textColor="@android:color/white" 
		    android:textSize="30sp"
		    android:fontFamily="sans-serif-light"
	        android:textStyle="normal" />
	    
	    <!-- <Button
	        android:id="@+id/logout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/txtuser"
	        android:layout_alignBottom="@+id/txtuser"
	        android:layout_toLeftOf="@+id/txtuser"
	        android:text="@string/LogoutBtn" /> -->

	</RelativeLayout>
</LinearLayout>
